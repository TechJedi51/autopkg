<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Identifier</key>
    <string>local.download.LibreOffice-Apple Silicon</string>
    <key>Description</key>
    <string>Downloads the latest Apple Silicon build of LibreOffice from The Document Foundation</string>
    <key>Input</key>
    <dict>
        <key>NAME</key><string>LibreOffice</string>
        <key>DOWNLOAD_PAGE</key>
        <string>https://www.libreoffice.org/download/download-libreoffice/</string>
        <key>ARCH</key><string>aarch64</string>
        <key>LANG</key><string>en-US</string>
    </dict>
    <key>Process</key>
    <array>
        <!-- Get the latest version number from the LibreOffice download page -->
        <dict>
            <key>Processor</key><string>URLTextSearcher</string>
            <key>Arguments</key>
            <dict>
                <key>url</key><string>%DOWNLOAD_PAGE%</string>
                <key>re_pattern</key>
                <string>Stable Version ([0-9.]+)</string>
                <key>result_output_var_name</key><string>latest_version</string>
            </dict>
        </dict>

        <!-- Build the actual download URL -->
        <dict>
            <key>Processor</key><string>StringFormatter</string>
            <key>Arguments</key>
            <dict>
                <key>input_str</key>
                <string>https://www.libreoffice.org/donate/dl/mac-%ARCH%/%latest_version%/%LANG%/LibreOffice_%latest_version%_MacOS_%ARCH%.dmg</string>
                <key>output_var_name</key><string>download_url</string>
            </dict>
        </dict>

        <!-- Download the .dmg file -->
        <dict>
            <key>Processor</key><string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key><string>%download_url%</string>
                <key>filename</key><string>LibreOffice-Silicon.dmg</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>
